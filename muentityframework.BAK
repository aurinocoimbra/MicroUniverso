DEFINE CLASS oDbField AS Custom

	PROTECTED FieldType			&& Tipo do campo
	PROTECTED FieldWidth		&& Tamanho do campo
	PROTECTED FieldDecimal		&& Número de casas decimais

	PROTECTED Description		&& Descrição do campo
	
	PROCEDURE INIT
		
		FieldType		= ""
		Description		= ""
		FieldWidth		= ""
		FieldDecimal	= ""
		
	ENDPROC
	
ENDDEFINE